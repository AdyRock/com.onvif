{
  "id": "camera",
  "name": {
    "en": "Camera"
  },

  "class": "camera",
  "capabilities": [
    "alarm_motion",
    "alarm_tamper",
    "motion_enabled"
  ],

  "pair": [{
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "login"
      },
      "options": {
        "singular": true
      }
    },
    {
      "id": "login",
      "template": "login_credentials"
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],

  "settings": [{
      "type": "group",
      "label": {
        "en": "Credentials"
      },
      "children": [{
          "id": "username",
          "type": "text",
          "label": {
            "en": "User Name"
          },
          "value": "",
          "hint": {
            "en": "User name required to login to the camera."
          }
        },
        {
          "id": "password",
          "type": "password",
          "label": {
            "en": "Password"
          },
          "value": "",
          "hint": {
            "en": "Password required to login to the camera."
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Motion Trigger"
      },
      "children": [{
          "id": "single",
          "type": "checkbox",
          "label": {
            "en": "Single"
          },
          "value": true,
          "hint": {
            "en": "Motion detection waits for no motion before triggering a new motion."
          }
        },
        {
          "id": "delay",
          "type": "number",
          "label": {
            "en": "Delay"
          },
          "value": 0.5,
          "units": "seconds",
          "hint": {
            "en": "Delay before image capture after motion triggered."
          }
        }
      ]
    }
  ],
  "images": {
    "large": "/drivers/camera/assets/images/large.png",
    "small": "/drivers/camera/assets/images/small.png"
  }
}