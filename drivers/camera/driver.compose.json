{
  "id": "camera",
  "name": {
    "en": "Camera"
  },

  "class": "camera",
  "capabilities": [
    "motion_enabled",
    "alarm_motion",
    "alarm_tamper",
    "event_time",
    "tamper_time",
    "date_time",
    "button.syncTime"
  ],
  "capabilitiesOptions": {
    "button.syncTime": {
      "maintenanceAction": true,
      "title": {
        "en": "Sync. Time"
      },
      "desc": {
        "en": "Set the camera time to Homey's time."
      }
    },
    "alarm_tamper": {
      "title": {
        "en": "Offline"
      }
    }
  },

  "pair": [{
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "login"
      },
      "options": {
        "singular": true
      }
    },
    {
      "id": "login",
      "template": "login_credentials"
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "repair": [{
    "id": "login",
    "template": "login_credentials"
  }],

  "settings": [{
      "type": "group",
      "label": {
        "en": "Credentials"
      },
      "children": [{
          "id": "username",
          "type": "text",
          "label": {
            "en": "User Name"
          },
          "value": "",
          "hint": {
            "en": "User name required to login to the camera."
          }
        },
        {
          "id": "password",
          "type": "password",
          "label": {
            "en": "Password"
          },
          "value": "",
          "hint": {
            "en": "Password required to login to the camera."
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Motion Trigger"
      },
      "children": [{
          "id": "hasMotion",
          "type": "checkbox",
          "label": {
            "en": "Has Motion"
          },
          "value": true,
          "hint": {
            "en": "Turn on if the device supports motion. When turning off, the last event image will remain until the App is restarted"
          }
        },
        {
          "id": "single",
          "type": "checkbox",
          "label": {
            "en": "Single"
          },
          "value": true,
          "hint": {
            "en": "Motion detection waits for no motion before triggering a new motion."
          }
        },
        {
          "id": "delay",
          "type": "number",
          "label": {
            "en": "Delay"
          },
          "value": 0.5,
          "units": "seconds",
          "hint": {
            "en": "Delay before image capture after motion triggered."
          }
        },
        {
          "id": "timeFormat",
          "type": "dropdown",
          "label": {
            "en": "Time Format"
          },
          "value": "mm_dd",
          "hint": {
            "en": "The format to show the time capabilities."
          },
          "values": [{
              "id": "raw",
              "label": {
                "en": "Direct From Camera"
              }
            },
            {
              "id": "system",
              "label": {
                "en": "Local"
              }
            },
            {
              "id": "mm_dd",
              "label": {
                "en": "Short HH:MM DD-MM"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Camera Information"
      },
      "children": [{
          "id": "manufacturer",
          "type": "label",
          "label": {
            "en": "Manufacturer"
          },
          "value": ""
        },
        {
          "id": "model",
          "type": "label",
          "label": {
            "en": "Model"
          },
          "value": ""
        },
        {
          "id": "serialNumber",
          "type": "label",
          "label": {
            "en": "Serial Number"
          },
          "value": ""
        },
        {
          "id": "firmwareVersion",
          "type": "label",
          "label": {
            "en": "Firmware Version"
          },
          "value": ""
        },
        {
          "id": "ip",
          "type": "label",
          "label": {
            "en": "IP Address"
          },
          "value": ""
        },
        {
          "id": "port",
          "type": "label",
          "label": {
            "en": "Port"
          },
          "value": ""
        },
        {
          "id": "url",
          "type": "label",
          "label": {
            "en": "Snapshot URL"
          },
          "value": ""
        }
      ]
    }
  ],
  "images": {
    "large": "/drivers/camera/assets/images/large.png",
    "small": "/drivers/camera/assets/images/small.png"
  }
}