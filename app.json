{
  "id": "com.onvif",
  "version": "0.0.2",
  "compatibility": ">=3.0.0",
  "sdk": 2,
  "name": {
    "en": "ONVIF Camera"
  },
  "description": {
    "en": "Support for ONVIF compatible cameras"
  },
  "category": [
    "video"
  ],
  "permissions": [],
  "bugs": {
    "url": "https://github.com/AdyRock/com.onvif/issues"
  },
  "source": "https://github.com/AdyRock/com.onvif",
  "homeyCommunityTopicId": 28377,
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Adrian Rockall",
    "email": "ady@rockall.plus.com"
  },
  "flow": {
    "triggers": [
      {
        "id": "motionEnabledTrigger",
        "title": {
          "en": "Motion enabled"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=camera"
          }
        ]
      },
      {
        "id": "motionDisabledTrigger",
        "title": {
          "en": "Motion disabled"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=camera"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "motionEnabledCondition",
        "title": {
          "en": "Motion is !{{enabled|disabled}}"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=camera"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "motionEnableAction",
        "title": {
          "en": "Enable motion"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=camera"
          }
        ]
      },
      {
        "id": "motionDisableAction",
        "title": {
          "en": "Disable motion"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=camera"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "camera",
      "name": {
        "en": "Camera"
      },
      "class": "camera",
      "capabilities": [
        "motion_enabled",
        "alarm_motion",
        "alarm_tamper",
        "event_time",
        "tamper_time",
        "date_time",
        "button.syncTime"
      ],
      "capabilitiesOptions": {
        "button.syncTime": {
          "maintenanceAction": true,
          "title": {
            "en": "Sync. Time"
          },
          "desc": {
            "en": "Set the camera time to Homey's time."
          }
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "login"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "login",
          "template": "login_credentials"
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Credentials"
          },
          "children": [
            {
              "id": "username",
              "type": "text",
              "label": {
                "en": "User Name"
              },
              "value": "",
              "hint": {
                "en": "User name required to login to the camera."
              }
            },
            {
              "id": "password",
              "type": "password",
              "label": {
                "en": "Password"
              },
              "value": "",
              "hint": {
                "en": "Password required to login to the camera."
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Motion Trigger"
          },
          "children": [
            {
              "id": "single",
              "type": "checkbox",
              "label": {
                "en": "Single"
              },
              "value": true,
              "hint": {
                "en": "Motion detection waits for no motion before triggering a new motion."
              }
            },
            {
              "id": "delay",
              "type": "number",
              "label": {
                "en": "Delay"
              },
              "value": 0.5,
              "units": "seconds",
              "hint": {
                "en": "Delay before image capture after motion triggered."
              }
            }
          ]
        }
      ],
      "images": {
        "large": "/drivers/camera/assets/images/large.png",
        "small": "/drivers/camera/assets/images/small.png"
      }
    }
  ],
  "capabilities": {
    "date_time": {
      "type": "string",
      "title": {
        "en": "Camera Time"
      },
      "icon": "/assets/camera_time.svg",
      "getable": true,
      "setable": false
    },
    "event_time": {
      "type": "string",
      "title": {
        "en": "Motion Event Time"
      },
      "icon": "/assets/motion_time.svg",
      "getable": true,
      "setable": false
    },
    "motion_enabled": {
      "type": "boolean",
      "title": {
        "en": "Motion enabled"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "toggle",
      "icon": "/assets/motion.svg"
    },
    "tamper_time": {
      "type": "string",
      "title": {
        "en": "Tamper Time"
      },
      "icon": "/assets/tamper_time.svg",
      "getable": true,
      "setable": false
    }
  }
}